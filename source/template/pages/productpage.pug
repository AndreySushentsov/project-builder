extends ../_template

block variables
    - var title = 'Home page'

block content
    header.container
        .row
            .col-sm-3.header__logo
                a(href="#").header__link
                    img(src="./assets/img/header_logo.png")
            .col-sm-offset-6.col-sm-3.header__phone
                a(href="#" title="8-800-700-0537").header__link-phone 8-800-700-0537
                a(href="#" title="rivaldecor@rival-decor.ru").header__link-email rivaldecor@rival-decor.ru
    .page__navigation
        .container
            .row
                .col-sm-2.page__navigation-main
                    a(href="/") < на главную
                .col-sm-offset-3.col-sm-7
                    ul.header__navigation-list
                        -var items = ['продукция',"о компании","объекты","новости","контакты"];
                        each item in items
                            li.header__navigation-item
                                a(href="#")=item
    .container
        .row
            .col-xs-12
                .page__product
        .row
            .col-xs-12
                .page__galery-title Галерея
        .row
            .col-sm-3
                img(src="./assets/img/galery_item.png")
            .col-sm-3
                img(src="./assets/img/galery_item.png")
            .col-sm-3
                img(src="./assets/img/galery_item.png")
            .col-sm-3
                img(src="./assets/img/galery_item.png")
        .row
            .col-xs-12
                .page__advantages-title Наши приемущества
        .row
            .col-sm-3
                .page__card
                    img(src="./assets/img/like.svg").page__icon
                    span Специальные ценовые условия от производителя
            .col-sm-3
                .page__card
                    img(src="./assets/img/delivery.svg").page__icon
                    span Доставка до объекта по всей России
            .col-sm-3
                .page__card
                    img(src="./assets/img/clock.svg").page__icon
                    span Изготовление под заказ от двух недель
            .col-sm-3
                .page__card
                    img(src="./assets/img/colors.svg").page__icon
                    span Цвет порошковой окраски любой по каталогу RAL
        .row
            .col-xs-12
                .form__wrapper
                    .form__block.form__block_left
                        span.form__title Оставте заявку на быстрый расчет
                        span Наш менеджер свяжется с вами в течении дня
                    .form__block.form__block_right
                        form
                            input(type="text" name="name" placeholder="Ваше имя")
                            .form__input-group
                                input(type="email" name="email" placeholder="Ваш e-mail")
                                input(type="tel" name="phone" placeholder="Ваш номер")
                            .button.button__send
                                input(type="submit" value= "Отправить")
        .row
            .col-xs-12
                .page__see Смотрите также
        .row.product__row
            .col-xs-offset-1.col-xs-10.col-sm-offset-0.col-sm-6
                .product__card
                    .product__container
                        .product__img-wrapper
                            img(src="")
                    .product__container.right
                        .product__card-title Фасадные панели
                        .product__card-description Компания "Риваль Лазер" принимает заказы на выпуск различной продукции по чертежам заказчика
                        a(href="#") Заказать >
            .col-xs-offset-1.col-xs-10.col-sm-offset-0.col-sm-6
                .product__card
                    .product__container
                        .product__img-wrapper
                            img(src="")
                    .product__container.right
                        .product__card-title Фасадные панели
                        .product__card-description Компания "Риваль Лазер" принимает заказы на выпуск различной продукции по чертежам заказчика
                        a(href="#") Заказать >
    include ./map
    include ./footer